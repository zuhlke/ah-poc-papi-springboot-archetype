<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="${artifactId}">

    <requiredProperties>
        <requiredProperty key="app-name"></requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
            <includes>
                <include>Main.java</include>
                <include>SpringbootApplication.java</include>
                <include>SpringController.java</include>
                <include>api/RequestHandler.java</include>
                <include>api/RestClient.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>src/test/java</directory>
            <includes>
                <include>integration/server/IntegrationTest.java</include>
                <include>integration/server/SpringHttpClient.java</include>
                <include>integration/client/RestClientTest.java</include>
                <include>integration/client/StubHttpServer.java</include>
                <include>integration/client/TestJsonBodyType.java</include>
                <include>unit/RequestHandlerTest.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="false">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.yml</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory/>
            <includes>
                <include>README.md</include>
                <include>.gitignore</include>
                <include>start-server</include>
                <include>run-tests</include>
                <include>build-jar</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
